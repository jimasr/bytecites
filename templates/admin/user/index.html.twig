{# {% extends 'base.html.twig' %}

{% block title %}User index{% endblock %} #}

{% block body %}
    <h4>User index</h4>
    <a href="{{ path('app_register') }}">Create new</a>


    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Name</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="text-center">
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a class="mx-2" href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a class="mx-2" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
